<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_dashboard">
    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.itcc.avasarpay.ui.home.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />
    <fragment
        android:id="@+id/navigation_event"
        android:name="com.itcc.avasarpay.ui.home.ui.event.EventFragment"
        android:label="@string/title_event"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_guests"
        android:name="com.itcc.avasarpay.ui.home.ui.guests.GuestsFragment"
        android:label="@string/title_guests"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_account"
        android:name="com.itcc.avasarpay.ui.home.ui.account.AccountFragment"
        android:label="@string/title_account"
        tools:layout="@layout/fragment_notifications" />
</navigation>