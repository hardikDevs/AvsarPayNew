<?xml version="1.0" encoding="utf-8"?>


<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/header_cover_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_120sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/topmain_ic" />

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_below="@+id/header_cover_image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-60dp"
                    app:cardCornerRadius="@dimen/_12sdp"
                    android:elevation="5dp">

                    <ImageView
                        android:id="@+id/user_profile_photo"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:elevation="5dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/prof_dummy" />
                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:id="@+id/profile_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/header_cover_image"
                    android:layout_marginTop="-23dp"
                    android:background="@drawable/top_rounded"
                    android:backgroundTint="@color/white"
                    android:elevation="0dp"
                    android:paddingBottom="@dimen/_18sdp">


                    <TextView
                        android:id="@+id/user_profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="76dp"
                        android:fontFamily="@font/interbold"
                        android:text="Charlies Xavier"
                        android:textColor="@color/app_black"
                        android:textSize="@dimen/_16ssp" />

                    <TextView
                        android:id="@+id/user_profile_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/user_profile_name"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:fontFamily="@font/interbold"
                        android:text="+91 12345 67890"
                        android:textColor="@color/color_9FA7AD"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:id="@+id/user_profile_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/user_profile_num"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:fontFamily="@font/interbold"
                        android:text="charlies.xavier123@gmail.com"
                        android:textColor="@color/color_9FA7AD"
                        android:textSize="@dimen/_11ssp" />


                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/profLin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profile_layout"
                    android:layout_margin="@dimen/_12sdp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_weight="0.15"
                        android:src="@drawable/userprof_ic" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:fontFamily="@font/interregular"
                        android:text="My Profile"
                        android:textColor="@color/app_black"
                        android:textSize="@dimen/_13ssp" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_weight="0.1"
                        android:src="@drawable/arrow_right" />


                </LinearLayout>

                <View
                    android:id="@+id/profView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@id/profLin"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:alpha="0.8"
                    android:background="@color/color_CDCDCD" />

                <LinearLayout
                    android:id="@+id/reportLin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profView"
                    android:layout_margin="@dimen/_12sdp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_weight="0.15"
                        android:src="@drawable/report_ic" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:fontFamily="@font/interregular"
                        android:text="Reports"
                        android:textColor="@color/app_black"
                        android:textSize="@dimen/_13ssp" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_weight="0.1"
                        android:src="@drawable/arrow_right" />


                </LinearLayout>

                <View
                    android:id="@+id/reportView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@id/reportLin"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:alpha="0.8"
                    android:background="@color/color_CDCDCD" />

                <LinearLayout
                    android:id="@+id/walletLin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/reportView"
                    android:layout_margin="@dimen/_12sdp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_weight="0.15"
                        android:src="@drawable/wallet_ic" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:fontFamily="@font/interregular"
                        android:text="My Wallet"
                        android:textColor="@color/app_black"
                        android:textSize="@dimen/_13ssp" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_weight="0.1"
                        android:src="@drawable/arrow_right" />


                </LinearLayout>

                <View
                    android:id="@+id/changepwdView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@id/walletLin"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:alpha="0.8"
                    android:background="@color/color_CDCDCD" />

                <LinearLayout
                    android:id="@+id/chngpwdLin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/changepwdView"
                    android:layout_margin="@dimen/_12sdp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_weight="0.15"
                        android:src="@drawable/ic_password_change" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:fontFamily="@font/interregular"
                        android:text="Change Password"
                        android:textColor="@color/app_black"
                        android:textSize="@dimen/_13ssp" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_weight="0.1"
                        android:src="@drawable/arrow_right" />


                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/chngpwdLin"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_70sdp"
                    android:background="@drawable/rounded_btn"
                    android:backgroundTint="@color/color_724FDA"
                    android:fontFamily="@font/interbold"
                    android:text="Log Out"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14ssp" />


            </RelativeLayout>
        </ScrollView>

    </LinearLayout>
