<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <include
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/include"
        layout="@layout/common_toolbar"/>

    <TextView
        android:id="@+id/txtInviteGuest"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_12sdp"
        android:fontFamily="@font/interbold"
        android:text="Templet Preview"
        android:textColor="@color/app_black"
        android:textSize="@dimen/_16ssp"

        app:layout_constraintEnd_toStartOf="@+id/btnAddGust"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:id="@+id/btnAddGust"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button_primary"
        android:text="Add Guest"
        android:textAllCaps="false"
       android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/txtInviteGuest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtInviteGuest" />

    <WebView
        android:layout_marginTop="@dimen/_5sdp"
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAddGust" />


</androidx.constraintlayout.widget.ConstraintLayout>