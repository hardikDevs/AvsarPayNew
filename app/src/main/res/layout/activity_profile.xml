<?xml version="1.0" encoding="utf-8"?>


<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/header_cover_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_120sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/topmain_ic" />

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    app:cardCornerRadius="@dimen/_30sdp">

                    <ImageView
                        android:id="@+id/back"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/back_ic" />
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_below="@+id/header_cover_image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-60dp"
                    android:elevation="5dp"
                    app:cardCornerRadius="@dimen/_12sdp">

                    <ImageView
                        android:id="@+id/user_profile_photo"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:elevation="5dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/prof_dummy" />
                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:id="@+id/profile_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/header_cover_image"
                    android:layout_marginTop="-23dp"
                    android:background="@drawable/top_rounded"
                    android:backgroundTint="@color/white"
                    android:elevation="0dp"
                    android:paddingBottom="@dimen/_18sdp">


                    <TextView
                        android:id="@+id/user_profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="76dp"
                        android:fontFamily="@font/interbold"
                        android:text="Charlies Xavier"
                        android:textColor="@color/app_black"
                        android:textSize="@dimen/_16ssp" />

                    <LinearLayout
                        android:id="@+id/phoneLin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/user_profile_name"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/user_profile_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:fontFamily="@font/interbold"
                            android:text="+91 12345 67890"
                            android:textColor="@color/color_9FA7AD"
                            android:textSize="@dimen/_11ssp" />

                        <ImageView
                            android:id="@+id/phoneEdit"
                            android:layout_width="@dimen/_11sdp"
                            android:layout_height="@dimen/_11sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:src="@drawable/edit_gray_ic" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/user_profile_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/phoneLin"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:fontFamily="@font/interbold"
                        android:text="charlies.xavier123@gmail.com"
                        android:textColor="@color/color_9FA7AD"
                        android:textSize="@dimen/_11ssp" />


                </RelativeLayout>


                <View
                    android:id="@+id/profView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@id/profile_layout"
                    android:layout_margin="@dimen/_12sdp"
                    android:alpha="0.8"
                    android:background="@color/color_CDCDCD" />

                <TextView
                    android:id="@+id/info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:fontFamily="@font/interbold"
                    android:text="A class integer donec per rutrum diam adipiscing inceptos neque mus in commodo curae sodales lorem pharetra orci dictumst auctor commodo curae sodales lorem pharetra orci dictumst auctorcommodo curae sodales lorem pharetra orci dictumst auctor."
                    android:textAlignment="center"
                    android:textColor="@color/color_9FA7AD"
                    android:textSize="@dimen/_11ssp" />


                <View
                    android:id="@+id/reportView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@id/info"
                    android:layout_margin="@dimen/_12sdp"
                    android:alpha="0.8"
                    android:background="@color/color_CDCDCD" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/reportView"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:background="@drawable/rounded_btn"
                    android:backgroundTint="@color/color_724FDA"
                    android:fontFamily="@font/interbold"

                    android:text="Change Password"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14ssp" />


            </RelativeLayout>
        </ScrollView>

    </LinearLayout>
